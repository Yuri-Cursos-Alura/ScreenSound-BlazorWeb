@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="true" Theme="_currentTheme"/>
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>

    <MudAppBar Color="Color.Surface" Fixed="true" Elevation="2">
        <MudIcon Icon="@Icons.Material.Filled.MusicNote" Size="Size.Large" Color="Color.Primary"/>
        <MudText Typo="Typo.h5" Class="ml-3">ScreenSound</MudText>
    </MudAppBar>

    <MudDrawer Open="true" ClipMode="DrawerClipMode.Always" Elevation="2" Color="Color.Surface">
        <NavMenu> </NavMenu>
    </MudDrawer>

    <MudMainContent Class="main-content pa-10">
        @Body
    </MudMainContent>

</MudLayout>

@code {
    private readonly MudTheme _currentTheme = new MudTheme()
        {
            PaletteDark = new PaletteDark()
            {
                Primary = "#9966FF",
                Secondary = "#F6AD31",
                Tertiary = "#8AE491",
            },

            LayoutProperties = new LayoutProperties()
            {
                DrawerWidthLeft = "260px",
            }
        };
}
